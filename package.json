{
  "name": "phishy-email-analyzer",
  "version": "2.0.0",
  "description": "AI-powered phishing email analysis tool using Claude to evaluate suspicious emails",
  "main": "index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "deploy": "npm run build && zip -r function.zip dist node_modules package.json index.js && aws lambda update-function-code --function-name phishyAWS --zip-file fileb://function.zip",
    "deploy:legacy": "zip -r function.zip index.js node_modules package.json && aws lambda update-function-code --function-name phishy --zip-file fileb://function.zip"
  },
  "keywords": [
    "security",
    "phishing",
    "email",
    "analysis",
    "claude",
    "aws",
    "lambda",
    "bedrock",
    "enterprise"
  ],
  "author": "",
  "license": "GPL-3.0",
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.787.0",
    "@aws-sdk/client-rds-data": "^3.787.0",
    "@aws-sdk/client-s3": "^3.787.0",
    "@aws-sdk/client-secrets-manager": "^3.990.0",
    "@aws-sdk/client-ses": "^3.787.0",
    "axios": "^1.7.0",
    "pg": "^8.13.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@smithy/util-stream": "^4.5.12",
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.0",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "aws-sdk-client-mock": "^4.1.0",
    "aws-sdk-client-mock-jest": "^4.1.0",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.18.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/phishy-email-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/phishy-email-analyzer/issues"
  }
}
